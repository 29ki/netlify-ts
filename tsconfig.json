{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "*/**/*.spec.ts"]
}
